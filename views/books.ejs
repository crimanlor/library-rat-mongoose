<!DOCTYPE html>
<html>
<%- include('./partials/_head.ejs') %>
    </head>

    <body>
        <%- include('./partials/_header.ejs') %>
            <h1>Books list</h1>
            <ul class="w3-ul w3-border">
                <% books.forEach(function(book) { %>
                    <li>
                        <p>
                            <strong>Title: </strong>
                            <%= book.title %>
                        </p>
                        <p>
                            <strong>Synopsis: </strong>
                            <%= book.summary %>
                        </p>
                        <p>
                            <strong>ISBN: </strong>
                            <%= book.isbn %>
                        </p>
                        <p>
                            <strong>Author: </strong>
                            <%= book.author.firstName + ' ' + book.author.familyName %>
                        </p>
                        <p>
                            <a href="/catalog/book/<%= book._id %>/booking" class="w3-button w3-teal">Add new booking</a>
                        </p>
                    </li>
                    <% }) %>
            </ul>

    </body>

</html>